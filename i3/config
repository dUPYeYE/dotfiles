#    █▄█ █▄█ █▀▄ █▄█ ▄█   █▀▄ █▄█ █▄█ ██▄ █▀▄ ░█░   █▀█ █▀▄ █▀▀ █▀█ █▄▀
#

# Autostart daemons and apps
include $HOME/.config/i3/autostart.conf

# Binds
include $HOME/.config/i3/binds.conf

# Window specific
include $HOME/.config/i3/windows.conf

# Colorscheme
include $HOME/.config/i3/themes/catppuccin-mocha
include $HOME/.config/i3/colors_catppuccin.conf

# Assign workspaces to monitors
set $firstMonitor HDMI-A-0
set $secondMonitor HDMI-A-1

workspace 1 output $firstMonitor
workspace 2 output $firstMonitor
workspace 3 output $firstMonitor
workspace 4 output $firstMonitor
workspace 5 output $firstMonitor
workspace 6 output $firstMonitor
workspace 7 output $firstMonitor
workspace 8 output $secondMonitor
workspace 9 output $secondMonitor
workspace 10 output $secondMonitor

bar {
	position top
    height 25
	status_command i3status --config ~/.config/i3/i3status.conf
}

for_window [class="vol|fterm|mus|sysinfo"] floating enable, resize set 1400 820, move scratchpad, border pixel 0

exec --no-startup-id pgrep -f '^alacritty --class mus,mus' || alacritty --class mus,mus -e ncspot
exec --no-startup-id pgrep -f '^alacritty --class vol,vol' || alacritty --class vol,vol -e pulsemixer
exec --no-startup-id pgrep -f '^alacritty --class fterm,fterm' || alacritty --class fterm,fterm
exec --no-startup-id pgrep -f '^alacritty --class sysinfo,sysinfo' || alacritty --class sysinfo,sysinfo -e btop 
