#!/usr/bin/env bash

# dmenu theming
. $HOME/.local/bin/dmenu-theming
colors="-nb #282828 -nf #e0def4 -sb #eb6f92 -sf #21202e -nhf #282828 -nhb #eb6f92 -shf #eb6f92 -shb #191724"

selected="$(ps -a -u $USER | \
            dmenu -i -p "Type to search and select process to kill" \
            $lines $colors $font $offset | \
            awk '{print $1" "$4}')"; 

if [[ ! -z $selected ]]; then

    answer="$(echo -e "Yes\nNo" | \
            dmenu -i -p "$selected will be killed, are you sure?" \
            $lines $colors $font $offset)"

    if [[ $answer == "Yes" ]]; then
        selpid="$(awk '{print $1}' <<< $selected)"; 
        kill -9 $selpid
    fi
fi

exit 0
